{
    "properties": {
        "uid": {
            "type": "string",
            "description": "Globally unique ID for this container"
        },
        "owner": {
            "type": "string",
            "description": "String descriptor to associate this simulation with. Can be user or process"
        },
        "time": {
            "type": "number",
            "description": "Time the container was created.  Unix epoch time"
        },
        "starting": {
            "type": "object",
            "description": "Starting atomic configuration"
        },
        "min": {
            "type": "object",
            "description": "Minimum energy atomic configuration"
        },
        "pes": {
            "type": "object",
            "description": "The Potential Energy Surface"
        },
        "optimizer": {
            "type": "string",
            "description": "The optimizer which will find minima"
        },
        "control": {
            "type": "object",
            "properties":{
                "status": {"type": "string", "enum":["queued", "running", "finished", "error", "skip"]},
                "run_args":{"type": "array"}
            },
            "description": "Flow control for the simulation"
        }
    },
    "required": [
        "uid",
        "time",
        "starting",
        "pes",
        "optimizer",
        "control"
     ],
    "type": "object",
    "description": "Document created for group of containers."
}